generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SensorData {
  id          Int      @id @default(autoincrement())
  temperature Int
  humidity    Int
  light       Int
  gas         Int      @default(0)
  createdAt   DateTime @default(now())

  @@map("sensor_data")
}

model ActionHistory {
  id        Int      @id @default(autoincrement())
  device    Device
  action    Action
  createdAt DateTime @default(now())

  @@map("action_history")
}

model GasWarning {
  id        Int      @id @default(autoincrement())
  gasValue  Float
  createdAt DateTime @default(now())
}

enum Device {
  LED
  FAN
  AIR_CONDITIONER
  GAS_WARNING
}

enum Action {
  ON
  OFF
}
